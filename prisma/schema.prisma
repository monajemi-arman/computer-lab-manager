// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.db"
}

model Task {
  id String @id
  status TaskStatus
  playbookId Int
  playbook Playbook @relation(fields: [playbookId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
enum TaskStatus {
  RUNNING
  ENDED
}

model Playbook {
  id Int @id @default(autoincrement())
  name String
  filename String
  description String 
  tasks Task[]
}

model PortMap {
  id Int @id @default(autoincrement())
  hostname String
  remotePort Int
  localPort Int
  owner String
}